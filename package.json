{
	"name": "gramonta-bot",
	"version": "2.0.0",
	"description": "Second iteration of the Gramonta-Bot, using the Kozz-bot framework",
	"main": "./dist",
	"license": "MIT",
	"scripts": {
		"build": "babel ./src --out-dir ./dist --extensions .ts,.tsx --copy-files --source-maps",
		"dev": "npm run build -- --watch & node --watch --watch-path=dist --env-file=.env --enable-source-maps dist/index.js",
		"start": "npm run build && node --env-file=.env dist/index.js",
		"test": "jest",
		"docs": "typedoc ./src/index.ts",
		"postman": "node ./scripts/postman_signature postman-test",
		"postinstall": "npx patch-package"
	},
	"devDependencies": {
		"@babel/cli": "^7.28.3",
		"@babel/core": "^7.28.3",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-proposal-object-rest-spread": "^7.20.7",
		"@babel/preset-env": "^7.28.3",
		"@babel/preset-react": "^7.27.1",
		"@babel/preset-typescript": "^7.27.1",
		"@types/express": "^4.17.23",
		"@types/fluent-ffmpeg": "^2.1.27",
		"@types/google-images": "^2.1.4",
		"@types/he": "^1.2.3",
		"@types/jest": "^29.5.14",
		"@types/jsdom": "^21.1.7",
		"@types/mime-types": "^2.1.4",
		"babel": "^6.23.0",
		"babel-plugin-module-resolver": "^5.0.2",
		"concurrently": "^7.6.0",
		"kozz-types": "^0.1.22",
		"nodemon": "^2.0.22",
		"patch-package": "^7.0.2",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@deepgram/sdk": "^3.13.0",
		"@distube/ytdl-core": "^4.16.12",
		"@supabase/supabase-js": "^2.56.0",
		"axios": "^1.11.0",
		"cron": "^3.5.0",
		"dotenv": "^16.6.1",
		"express": "^4.21.2",
		"firebase-admin": "^12.7.0",
		"fluent-ffmpeg": "^2.1.3",
		"google-images": "^2.1.0",
		"he": "^1.2.0",
		"html-memo": "^1.0.1",
		"jsdom": "^22.1.0",
		"kozz-module-maker": "^0.3.0",
		"link-module-alias": "^1.2.0",
		"mime-types": "^2.1.35",
		"openai": "^3.3.0",
		"sharp": "^0.33.5",
		"youtube-search": "^1.1.6",
		"ytdl": "^1.4.1",
		"ytdl-core": "^4.11.5"
	},
	"_moduleAliases": {
		"src": "dist"
	},
	"resolutions": {
		"glob/minimatch": "7.4.6"
	}
}
